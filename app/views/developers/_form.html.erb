<%= simple_form_for(developer,
                     html: { class: 'form-flex' } ) do |f| %>
  <%= f.input :first_name, as: :string %>
  <%= f.input :last_name, as: :string %>
  <%= f.input :price_day, as: :string %>
  <%= f.input :prog_langage,
              collection: Developer::LANGAGE,
              label: "Programmation langage"%>
  <%= f.input :work_zone, as: :string %>
  <%= f.input :photo, as: :file %>
  <%= f.button :submit, class: "btn btn-primary"  %>
<% end %>
