
<div style="display: grid; grid-template-columns: 1fr 1fr" >
  <div class="list">
    <% @developers.each do |dev| %>
      <div class="cards">
        <div class="container_card">
          <%= link_to "#", class: "thumbnail" do %>
            <%= image_tag "https://images.unsplash.com/photo-1438761681033-6461ffad8d80?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=750&q=80" %>
          <% end %>
          <div class="description">
            <div class="full_name">
              <h3><%= dev.first_name %></h3>
              <h3><%= dev.last_name %></h3>
            </div>
            <div class="experiences">
              <h4><%= "#{dev.skills} an(s) d'expérience" %></h4>
            </div>
          </div>
          <div class="language_prog">
            <h4>
              <%= dev.prog_langage %>
            </h4>
          </div>
          <div class="work_zone">
            <h4>
              <%= dev.work_zone %>
            </h4>
          </div>
          <div class="price">
            <h5>
              <%= "#{dev.price_day} € " %>
            </h5>
          </div>
          <div class="hire_me">
            <%= link_to "Louez-Moi", developer_path(dev) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div id="map"
        style="height: 100vh;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
